{
    "name": "Kclipboard",
    "description": "A chrome extension, work around for a clipboard",
    "manifest_version": 3,
    "version": "1.0",
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icon.png",
        "24": "icon.png",
        "32": "icon.png",
        "48": "icon.png"
    },
    "action": {
        "default_icon": {
            "16": "icon.png",
            "24": "icon.png",
            "32": "icon.png",
            "48": "icon.png"
        },
        "default_title": "Kclipboard",
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage",
        "tabs",
        "contextMenus",
        "clipboardRead",
        "clipboardWrite"
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}