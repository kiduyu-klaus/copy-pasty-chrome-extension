{
    "manifest_version": 3,
    "name": "ClipboardX",
    "description": "A chrome extension, work around for a clipboard",
    "version": "1.0",
    "permissions": ["storage", "tabs"],
    "action": {
        "default_title": "ClipboardX",
        "default_popup": "popup.html",
        "default_icons": {
            "16": "icon.png",
            "24": "icon.png",
            "32": "icon.png",
            "48": "icon.png"
        }
    },
    "icons": {
        "16": "icon.png",
        "24": "icon.png",
        "32": "icon.png",
        "48": "icon.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}
